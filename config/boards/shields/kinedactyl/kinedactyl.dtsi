#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <16>;
        rows = <6>;
		map = <
        RC(0,1) RC(0,2) RC(0,3) RC(0,4)                                                              RC(0,11) RC(0,12) RC(0,13) RC(0,14)
RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)                                             RC(1,10) RC(1,11) RC(1,12) RC(1,13) RC(1,14) RC(1,15)
RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)                                             RC(2,10) RC(2,11) RC(2,12) RC(2,13) RC(2,14) RC(2,15)
RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5)                                             RC(3,10) RC(3,11) RC(3,12) RC(3,13) RC(3,14) RC(3,15)
RC(4,0) RC(4,1) RC(4,2) RC(4,3) RC(4,4) RC(4,5)     RC(4,6) RC(4,7)     RC(4,8) RC(4,9)     RC(4,10) RC(4,11) RC(4,12) RC(4,13) RC(4,14) RC(4,15)
        RC(5,1) RC(5,2) RC(5,3) RC(5,4)    RC(5,5)  RC(5,6) RC(5,7)     RC(5,8) RC(5,9)  RC(5,10)    RC(5,11) RC(5,12) RC(5,13) RC(5,14) 

		>;
	};
    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";

        diode-direction = "row2col";
        row-gpios
            = <&pro_micro 19 GPIO_ACTIVE_HIGH> // Row 0 from the schematic file
            , <&pro_micro 18 GPIO_ACTIVE_HIGH> // Row 1 from the schematic file
            , <&pro_micro 15 GPIO_ACTIVE_HIGH> // Row 2 from the schematic file
            , <&pro_micro 14 GPIO_ACTIVE_HIGH> // Row 3 from the schematic file
            , <&pro_micro 16 GPIO_ACTIVE_HIGH> // Row 4 from the schematic file
            , <&pro_micro 10 GPIO_ACTIVE_HIGH> // Row 5 from the schematic file
            ;

    };
};
